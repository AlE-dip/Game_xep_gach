<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:background="@drawable/thanh_doc"
        app:layout_constraintTop_toTopOf="@id/frame"
        app:layout_constraintRight_toLeftOf="@id/frame"
        android:layout_marginRight="2dp"
        android:layout_width="2dp"
        android:layout_height="515dp">
    </ImageView>

    <GridView
        android:id="@+id/frame"
        android:layout_width="250dp"
        android:layout_height="515dp"
        android:horizontalSpacing="1dp"
        android:numColumns="10"
        android:verticalSpacing="1dp"
        app:layout_constraintTop_toBottomOf="@id/txvScoreNum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintVertical_bias="0.756" />



    <ImageView
        android:background="@drawable/thanh_doc"
        app:layout_constraintTop_toTopOf="@id/frame"
        app:layout_constraintLeft_toRightOf="@id/frame"
        android:layout_marginLeft="2dp"
        android:layout_width="2dp"
        android:layout_height="515dp">
    </ImageView>

    <TextView
        android:id="@+id/txvLines"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txvLinesNum"
        android:text="LINES"
        android:fontFamily="sans-serif-black"
        android:textSize="15sp"
        android:padding="3dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/txvLinesNum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txvLines"
        android:text="000"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/txvScore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txvScoreNum"
        android:text="SCORE"
        android:fontFamily="sans-serif-black"
        android:textSize="15sp"
        android:padding="3dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/txvScoreNum"
        app:layout_constraintLeft_toRightOf="@id/txvScore"
        app:layout_constraintTop_toBottomOf="@+id/txvLinesNum"
        android:text="00000000"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <ImageView
        android:id="@+id/imvTouch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/txvThongBao"
        android:textSize="30dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <ImageView
        android:id="@+id/imvReload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvThongBao"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/stat_notify_sync">
    </ImageView>

    <GridView
        android:id="@+id/temp"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:horizontalSpacing="1dp"
        android:numColumns="4"
        android:verticalSpacing="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintVertical_bias="0.756" />
</androidx.constraintlayout.widget.ConstraintLayout>